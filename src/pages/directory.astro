---
// src/pages/directory.astro
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import { supabase } from '../lib/supabase';

// Fetch all helpers from Supabase for the main directory
const { data: helpers, error } = await supabase
  .from('helpers')
  .select('*')
  .order('created_at', { ascending: false });

const displayHelpers = helpers || [];
---

<Layout title="Browse Available Helpers | Alexis Employment">
  
  <Navbar />
  
  <div class="bg-brand-cream border-b border-brand-blue/5 pt-40 md:pt-48 pb-16">
    <div class="max-w-7xl mx-auto px-6 md:px-12">
      <div class="reveal">
        <span class="text-[0.65rem] uppercase tracking-[0.3em] text-brand-blue font-bold mb-4 block">The Database</span>
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-serif text-brand-text tracking-tight mb-6">Available Professionals</h1>
        <p class="text-brand-text/80 font-normal leading-relaxed max-w-2xl">
          Browse our complete, strictly vetted roster of domestic professionals. Use the filters below to narrow down candidates by nationality or specific expertise.
        </p>
      </div>
    </div>
  </div>

  <main class="bg-white min-h-screen pt-12 pb-32">
    <div class="max-w-7xl mx-auto px-6 md:px-12">

      <div class="grid grid-cols-1 md:grid-cols-4 gap-0 mb-16 reveal delay-100 border border-brand-blue/20 bg-brand-cream/50 shadow-sm sticky top-6 z-40">
        
        <div class="relative flex items-center px-6 py-5 border-b md:border-b-0 md:border-r border-brand-blue/20 md:col-span-2">
          <i data-lucide="search" class="w-4 h-4 text-brand-text/60 mr-4"></i>
          <input 
            type="text" 
            id="searchInput"
            placeholder="Search by name, reference, or skill..." 
            class="w-full bg-transparent border-none outline-none text-brand-text placeholder:text-brand-text/60 text-sm font-medium focus:ring-0"
          />
        </div>

        <div class="relative flex items-center px-6 py-5 border-b md:border-b-0 md:border-r border-brand-blue/20">
          <select id="nationalityFilter" class="w-full bg-transparent border-none outline-none text-brand-text text-sm font-medium appearance-none focus:ring-0 cursor-pointer">
            <option value="all">All Nationalities</option>
            <option value="philippines">Philippines</option>
            <option value="indonesia">Indonesia</option>
            <option value="myanmar">Myanmar</option>
            <option value="india">India</option>
          </select>
          <i data-lucide="chevron-down" class="w-4 h-4 text-brand-text/60 absolute right-6 pointer-events-none"></i>
        </div>

        <div class="flex items-center justify-center px-6 py-5 bg-white">
          <span class="text-sm font-bold text-brand-blue tracking-wide">
            <span id="resultCount">{displayHelpers.length}</span> Professionals
          </span>
        </div>

      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8" id="helperGrid">
        
        {displayHelpers.length > 0 ? (
          displayHelpers.map((helper, index) => (
            <div 
              class={`helper-card bg-brand-cream border border-brand-blue/10 p-8 shadow-sm hover:shadow-premium-hover transition-all duration-500 reveal delay-${(index % 3 + 1) * 100} flex flex-col h-full group`}
              data-name={helper.name?.toLowerCase() || ''}
              data-ref={helper.reference_code?.toLowerCase() || ''}
              data-nationality={helper.nationality?.toLowerCase() || ''}
            >
              <div class="flex items-start justify-between mb-8 pb-8 border-b border-brand-blue/10">
                <div class="flex items-center gap-5">
                  <div class="w-12 h-12 bg-white flex items-center justify-center text-brand-blue shadow-sm transition-colors">
                    <i data-lucide="user" class="w-5 h-5"></i>
                  </div>
                  <div>
                    <h3 class="text-xl font-serif text-brand-text mb-1 font-bold">{helper.name || 'Unknown'}</h3>
                    <p class="text-[0.65rem] text-brand-text/70 font-bold uppercase tracking-[0.2em]">Ref: {helper.reference_code || 'N/A'}</p>
                  </div>
                </div>
                <span class="text-[0.65rem] uppercase tracking-[0.2em] text-brand-text/80 font-bold">{helper.nationality || 'N/A'}</span>
              </div>
              
              <div class="grid grid-cols-2 gap-y-6 gap-x-4 text-sm text-brand-text/90 mb-8 flex-grow">
                <div class="flex flex-col"><span class="text-[0.65rem] uppercase tracking-wider text-brand-text/60 font-bold mb-1">Age</span><span class="font-medium">{helper.age || '-'} Years</span></div>
                <div class="flex flex-col"><span class="text-[0.65rem] uppercase tracking-wider text-brand-text/60 font-bold mb-1">Experience</span><span class="font-medium">{helper.experience || '-'}</span></div>
                <div class="flex flex-col"><span class="text-[0.65rem] uppercase tracking-wider text-brand-text/60 font-bold mb-1">Status</span><span class="font-medium">{helper.marital_status || '-'}</span></div>
                <div class="flex flex-col"><span class="text-[0.65rem] uppercase tracking-wider text-brand-text/60 font-bold mb-1">Religion</span><span class="font-medium">{helper.religion || '-'}</span></div>
              </div>

              <div class="mb-10">
                <p class="text-[0.65rem] uppercase tracking-wider text-brand-text/60 font-bold mb-3">Core Expertise</p>
                <div class="flex flex-wrap gap-2">
                  {helper.skills && Array.isArray(helper.skills) ? helper.skills.map((skill: string) => (
                    <span class="px-3 py-1.5 bg-white text-brand-text text-xs font-medium border border-brand-blue/10 shadow-sm">{skill}</span>
                  )) : (
                    <span class="px-3 py-1.5 bg-white text-brand-text text-xs font-medium border border-brand-blue/10 shadow-sm text-brand-text/40 italic">Evaluating...</span>
                  )}
                </div>
              </div>

              <a href={`/directory/${helper.id}`} class="w-full py-4 text-center bg-transparent border border-brand-text/30 text-brand-text text-xs uppercase tracking-[0.15em] font-bold hover:bg-brand-text hover:text-white hover:border-brand-text transition-all duration-300 mt-auto block">
                View Dossier
              </a>
            </div>
          ))
        ) : (
          <div class="col-span-full py-24 text-center border border-brand-blue/10 bg-brand-cream shadow-sm flex flex-col items-center justify-center">
            <div class="w-16 h-16 bg-white rounded-full flex items-center justify-center mb-6 shadow-sm border border-brand-blue/5">
              <i data-lucide="database" class="w-6 h-6 text-brand-text/40"></i>
            </div>
            <h3 class="text-xl font-serif text-brand-text mb-2 font-bold">Database Connecting</h3>
            <p class="text-brand-text/60 font-medium max-w-md mx-auto">
              No profiles found. Waiting for secure Supabase connection...
            </p>
          </div>
        )}

      </div>
    </div>
  </main>

  <Footer />
</Layout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const searchInput = document.getElementById('searchInput') as HTMLInputElement;
    const nationalityFilter = document.getElementById('nationalityFilter') as HTMLSelectElement;
    const cards = document.querySelectorAll('.helper-card');
    const resultCount = document.getElementById('resultCount');

    function filterHelpers() {
      const searchTerm = searchInput?.value.toLowerCase() || '';
      const nationality = nationalityFilter?.value.toLowerCase() || 'all';
      let visibleCount = 0;

      cards.forEach((card) => {
        const c = card as HTMLElement;
        const cardName = c.getAttribute('data-name') || '';
        const cardRef = c.getAttribute('data-ref') || '';
        const cardNat = c.getAttribute('data-nationality') || '';

        const matchesSearch = cardName.includes(searchTerm) || cardRef.includes(searchTerm);
        const matchesNationality = nationality === 'all' || cardNat === nationality;

        if (matchesSearch && matchesNationality) {
          c.style.display = 'flex';
          visibleCount++;
        } else {
          c.style.display = 'none';
        }
      });

      if (resultCount) {
        resultCount.textContent = visibleCount.toString();
      }
    }

    if (searchInput) searchInput.addEventListener('input', filterHelpers);
    if (nationalityFilter) nationalityFilter.addEventListener('change', filterHelpers);
  });
</script>
---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Hero from '../components/Hero.astro';
import DirectoryPreview from '../components/DirectoryPreview.astro';
import Features from '../components/Features.astro';
import Steps from '../components/Steps.astro';
import Testimonials from '../components/Testimonials.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Find Trusted Domestic Helpers">
  <Navbar />
  
  <main>
    <Hero />
    
    <DirectoryPreview />
    
    <Features />
    
    <Steps />

    <Testimonials />
    
    <section id="consultation" class="py-24 bg-[#F3F0E6] border-y border-[#EBE6D8]">
      <div class="max-w-3xl mx-auto px-6 md:px-12 text-center reveal">
        <h2 class="text-3xl md:text-4xl font-extrabold text-brand-text tracking-tight mb-4">Get Free Consultation</h2>
        <p class="text-brand-text/80 mb-8">Tell us about your needs and we'll help you find the perfect helper for your family.</p>
        <div class="p-8 bg-brand-cream border border-[#EBE6D8] shadow-xl rounded-xl">
           <p class="text-brand-text/50 italic font-medium">-- Booking Form UI Goes Here --</p>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>